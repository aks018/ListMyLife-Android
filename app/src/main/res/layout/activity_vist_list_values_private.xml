<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1.5dp"
        android:layout_below="@+id/textViewItemsFor"
        android:layout_marginLeft="3.5dp"
        android:layout_marginRight="3.5dp"
        android:id="@+id/listViewExpanded"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/textViewSetLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listViewExpanded"
        android:text=""
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textViewNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.5dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Notification Time: " />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15.5dp"
        android:layout_marginLeft="3.5dp"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text=""
        android:layout_below="@+id/textViewNotificationTime"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_delete_forever_black_48dp"
        android:layout_alignEnd="@+id/textViewSetLikes"
        android:layout_alignParentTop="true"
        android:onClick="deleteList"
        android:layout_marginLeft="3.5dp"
        android:layout_marginRight="3.5dp"
        android:layout_alignRight="@+id/textViewSetLikes"
         />
    <ImageButton
        android:layout_width="wrap_content"
        android:background="@mipmap/ic_add_alert_black_24dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3.5dp"
        android:layout_marginLeft="3.5dp"
        android:onClick="alterDateTime"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewNotificationTime" />

    <TextView
        android:id="@+id/textViewItemsFor"
        android:layout_width="wrap_content"
        android:layout_marginLeft="3.5dp"
        android:layout_marginRight="3.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />


</RelativeLayout>