<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"></RelativeLayout>
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="4.5dp"
        android:hint="Enter Email..."

        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/relativeLayout3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="4.5dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Password Recovery"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/relativeLayout3"
        android:layout_toEndOf="@+id/relativeLayout3" />


    <ImageButton
        android:id="@+id/textViewGoToRegister"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/icons8forgotpassword48"
        android:onClick="recoverPassword"
        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="4.5dp"
        android:text="Clear here if not already registered"
        android:layout_above="@+id/textView21"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="4.5dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Email"
        android:layout_marginTop="43dp"
       />















    <TextView
        android:id="@+id/textView21"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="4.5dp"
        android:layout_height="wrap_content"
        android:text="Recover Password"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>